<h2>Lista de Funcionários:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Novo Funcionário</button></a>

{{#each categorias}}
<div class="card mt-4">
  <div class="card-body">
    <h4>{{nome}}</h4>
    <small>CPF: {{cpf}}</small>
    <br>
    <small>Telefone: {{telefone}}</small>
    <br><br>
    <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar</button> </a>
  </div>
</div>
{{else}}
{{/each}}